{{#if cancel_at_period_end}}
    <a class="{{class}}" data-members-continue-subscription="{{id}}">
        {{continueLabel}}
    </a>
{{else}}
    <a class="{{class}}" data-members-cancel-subscription="{{id}}">
        {{cancelLabel}}
    </a>
{{/if}}

<span data-members-error><!-- error message will appear here --></span>
