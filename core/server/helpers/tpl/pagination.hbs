<nav class="pagination" role="navigation">
    {{#if prev}}
        <a class="newer-posts" href="{{page_url prev}}"><span aria-hidden="true">&larr;</span> {{t "frontend" "Newer Posts"}}</a>
    {{/if}}
    <span class="page-number">{{t "frontend" "Page"}} {{page}} {{t "frontend" "of"}} {{pages}}</span>
    {{#if next}}
        <a class="older-posts" href="{{page_url next}}">{{t "frontend" "Older Posts"}} <span aria-hidden="true">&rarr;</span></a>
    {{/if}}
</nav>
