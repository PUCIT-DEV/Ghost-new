{
    "title": {
        "default": "Ghost",
        "type": "blog"
    },
    "description": {
        "default": "Just a blogging platform.",
        "type": "blog"
    },
    "logo": {
        "default": "",
        "type": "blog"
    },
    "cover": {
        "default": "",
        "type": "blog"
    },
    "defaultLang": {
        "default": "en",
        "type": "blog",
        "validations": {
            "notNull": true
        }
    },
    "postsPerPage": {
        "default": "6",
        "type": "blog",
        "validations": {
            "notNull": true,
            "isNumeric": true
        }
    },
    "forceI18n": {
        "default": "true",
        "type": "blog",
        "validations": {
            "notNull": true,
            "isIn": ["true", "false"]
        }
    },

    "email": {
        "default": "ghost@example.com",
        "type": "general",
        "validations": {
            "notNull": true,
            "isEmail": true
        }
    },
    "activePlugins": {
        "default": "",
        "type": "general"
    },
    "activeTheme": {
        "default": "casper",
        "type": "general"
    },

    "currentVersion": {
        "default": "000",
        "type": "core"
    },
    "installedPlugins": {
        "default": "[]",
        "type": "core"
    }
}
