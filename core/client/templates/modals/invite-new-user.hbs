{{#gh-modal-dialog action="closeModal" showClose=true type="action" animation="fade"
    title="邀请用户" confirm=confirm class="invite-new-user"}}

        <fieldset>
            <div class="form-group">
                <label for="new-user-email">邮箱</label>
                {{input action="confirmAccept" class="email" id="new-user-email" type="email" placeholder="被邀请用户的邮箱" name="email" autofocus="autofocus"
                autocapitalize="off" autocorrect="off" value=email}}
            </div>

            <div class="form-group for-select">
                <label for="new-user-role">角色</label>
                {{gh-role-selector
                    initialValue=authorRole
                    onChange="setRole"
                    selectId="new-user-role"}}
            </div>

        </fieldset>

{{/gh-modal-dialog}}
