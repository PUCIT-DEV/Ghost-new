<div class="{{if isSpecialClient 'special-client'}}">
    {{#link-to 'settings.connections.edit' slug}}
    <div data-test-selector="client-list-item" class="client-list-item">
        <span class="client-list-item-figure" style={{clientImageBackground}}>
            <span class="hidden">Photo of {{client}}</span>
        </span>
        <div class="client-list-item-body">
            <span class="name">
                {{name}}
            </span>
            <br>
            <span class="description">Status: {{status}}</span>
        </div>
        <aside class="client-list-item-aside">
            {{#if isSpecialClient}}
            {{else}}
            <button class="btn btn-red icon-x" {{action 'deleteClient' id}}>
                REVOKE ACCESS
            </button>
            {{/if}}
        </aside>
    </div>
    {{/link-to}}
</div>
