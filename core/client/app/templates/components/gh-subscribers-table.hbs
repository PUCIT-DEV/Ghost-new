{{#light-table table scrollContainer=".subscribers-table" scrollBuffer=100 onScrolledToBottom=(action 'onScrolledToBottom') as |t|}}
    {{t.head}}

    {{#t.body canSelect=false as |body|}}
        {{#if isLoading}}
            {{#body.loader}}
                Loading...
            {{/body.loader}}
        {{else}}
            {{#if table.isEmpty}}
                {{#body.no-data}}
                    No subscribers found.
                {{/body.no-data}}
            {{/if}}
        {{/if}}
    {{/t.body}}
{{/light-table}}
