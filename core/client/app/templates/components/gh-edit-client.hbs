<div class="form-group">
  <div>
    <label for="client-name">Name:</label>
    <span data-test-selector="name">{{gh-input class="gh-input" name="name" value=name}}</span>
  </div>
</div>
<div class="form-group">
  <div>
    <label for="client-name">Status:</label>
    <span data-test-selector="status">{{status}}</span>
  </div>
  <div>
    <button type='button' class="btn btn-blue view-actions" {{action "changeClientStatus" (if isEnabled 'disabled' 'enabled')}}>
      {{if isEnabled 'Disable' 'Enable'}}
    </button>
  </div>
</div>
<div class="form-group">
  <div>
    <label for="client-name">Secret:</label>
    <span data-test-selector="secret">{{secret}}</span>
  </div>
  <div>
    <button type='button' class="btn btn-blue view-actions" {{action "refreshSecret"}}>
      Refresh Token
    </button>
  </div>
</div>
<div class="form-group">
  <label for="client-name">redirection URL:</label>
  <span data-test-selector="logo">{{gh-input class="gh-input" name="redirection_uri" value=redirection_uri}}</span>
</div>
<div class="form-group">
  <label for="client-name">Logo:</label>
  <span data-test-selector="logo">{{logo}}</span>
</div>
<div class="form-group">
  <label for="client-name">Description:</label>
  <span data-test-selector="description">{{gh-textarea class="gh-input" name="description" value=description}}</span>
</div>

<button type='button' class="btn btn-blue" {{action "saveClient"}}>
  Save
</button>
