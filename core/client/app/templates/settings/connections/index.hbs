<section class="view-content">

  <h4 class="user-list active-users">Clients</h4>
  <span>The are services which connect to Ghost - for example a desktop editor which
    allows you to send content into your Ghost account</span>

    {{#each model as |client|}}
      {{gh-client-list-item
        name=client.name
        slug=client.slug
        lastUsed=client.updated_at
        id=client.id
        deleteClient="deleteClient"}}
    {{/each}}

</section>
