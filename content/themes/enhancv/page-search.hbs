{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customize it to behave differently if you prefer. }}

<div id="top" class="top-ornament"></div>
<main class="content container posts-wrapper" role="main">
    <article class="{{post_class}}">
        <header class="post-header">
          <h1 class="post-title text-center">{{{title}}}</h1>
        </header>

        <form>
          <input id="search-field" placeholder="Type to search" />
        </form>

        <section class="row" id="results">
        </section>
    </article>
</main>
