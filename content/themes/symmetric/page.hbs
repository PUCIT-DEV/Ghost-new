{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

<!-- start: #page -->
<main id="page" class="main" role="main">

	<!-- start: .center -->
	<div class="center grid-container">
	
		<!-- start: .left-content -->
		<div class="left-content section grid-parent grid-50">
			<article class="{{post_class}}">
			
				{{! Everything inside the #post tags pulls data from the post }}
				{{#post}}
					<header>
						<h2 class="title bordered">{{{title}}}</h2>
					</header>
					<section class="post-content">
						<div class="text">
							{{content}}
						</div>
						<div class="clear"></div>
					</section>
				{{/post}}
				
			</article>
		</div>
		<!-- end: .content -->
		
		<div class="section hide-on-tablet">
			
			{{> sidebar-featured}}
			{{> sidebar-default}}
		
		</div>
	
	</div>
	<!-- end: .center -->

</main>
<!-- end: #page -->
