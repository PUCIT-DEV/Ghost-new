{{!< default}}

<!-- BANNER WRAP -->
<div class="banner-wrap game-review">
  <!-- BANNER -->
  <div class="banner grid-limit">
    <h2 class="banner-title">Game Reviews</h2>
    <p class="banner-sections">
      <span class="banner-section">Home</span>
      <!-- ARROW ICON -->
      <svg class="arrow-icon">
        <use xlink:href="#svg-arrow"></use>
      </svg>
      <!-- /ARROW ICON -->
      <span class="banner-section">Game Reviews</span>
    </p>
  </div>
  <!-- /BANNER -->
</div>
<!-- /BANNER WRAP -->

{{> "live-news"}}

<!-- LAYOUT CONTENT 1 -->
<div class="layout-content-1 layout-item-3-1 grid-limit">
  <!-- LAYOUT BODY -->
  <div class="layout-body">
    <!-- LAYOUT ITEM -->
    <div class="layout-item">
      {{#foreach posts}}
        <!-- POST PREVIEW -->
        <div class="post-preview landscape big game-review">
          <!-- POST PREVIEW IMG WRAP -->
          <a href="{{url}}">
            <div class="post-preview-img-wrap">
              <!-- POST PREVIEW IMG -->
              <figure class="post-preview-img liquid">
                <img srcset="{{img_url feature_image size="s"}} 300w,
                  {{img_url feature_image size="m"}} 600w,
                  {{img_url feature_image size="l"}} 1000w,
                  {{img_url feature_image size="xl"}} 2000w"
                  sizes="(max-width: 1000px) 400px, 800px"
                  src="{{img_url feature_image size="m"}}"
                  alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                  loading="lazy">
              </figure>
              <!-- POST PREVIEW IMG -->
            </div>
          </a>
          <!-- /POST PREVIEW IMG WRAP -->

          <!-- TAG ORNAMENT -->
          <a class="tag-ornament">Game News</a>
          <!-- /TAG ORNAMENT -->

          <!-- POST PREVIEW TITLE -->
          <a href="{{url}}" class="post-preview-title">{{title}}</a>
          <!-- POST AUTHOR INFO -->
          <div class="post-author-info-wrap">
            <p class="post-author-info small light">By {{#has author="count:>2"}}<a>Multiple authors</a>{{else}}{{authors}}{{/has}}<span class="separator">|</span><time datetime="{{date format="YYYY-MM-DD"}}">{{date}}</time></p>
          </div>
          <!-- /POST AUTHOR INFO -->
          <!-- POST PREVIEW TEXT -->
          <p class="post-preview-text">{{excerpt}}...</p>
        </div>
        <!-- /POST PREVIEW -->
      {{/foreach}}
    </div>
    <!-- /LAYOUT ITEM -->

    <!-- PAGE NAVIGATION -->
    <div class="page-navigation red spaced">
      <!-- CONTROL PREVIOUS -->
      <div class="slider-control big control-previous">
        <!-- ARROW ICON -->
        <svg class="arrow-icon medium">
          <use xlink:href="#svg-arrow-medium"></use>
        </svg>
        <!-- /ARROW ICON -->
      </div>
      <!-- /CONTROL PREVIOUS -->
      <a href="#" class="page-navigation-item">1</a>
      <a href="#" class="page-navigation-item active">2</a>
      <a href="#" class="page-navigation-item">3</a>
      <a href="#" class="page-navigation-item">...</a>
      <a href="#" class="page-navigation-item">8</a>
      <!-- CONTROL PREVIOUS -->
      <div class="slider-control big control-next">
        <!-- ARROW ICON -->
        <svg class="arrow-icon medium">
          <use xlink:href="#svg-arrow-medium"></use>
        </svg>
        <!-- /ARROW ICON -->
      </div>
      <!-- /CONTROL PREVIOUS -->
    </div>
    <!-- /PAGE NAVIGATION -->
  </div>
  <!-- /LAYOUT BODY -->

  {{> "sidebar"}}
</div>
<!-- /LAYOUT CONTENT 1 -->
