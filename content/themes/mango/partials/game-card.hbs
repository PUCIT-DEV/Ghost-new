<!-- PRODUCT PREVIEW -->
<div class="product-preview centered">
  <!-- PRODUCT PREVIEW IMG WRAP -->
  <div class="product-preview-img-wrap">
    <!-- PRODUCT PREVIEW IMG -->
    <a href="{{url}}">
      <figure class="product-preview-img liquid">
        <img src="{{img_url feature_image}}"
          alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}">
      </figure>
    </a>
    <!-- /PRODUCT PREVIEW IMG -->
  </div>
  <!-- /PRODUCT PREVIEW IMG WRAP -->

  <!-- PRODUCT PREVIEW TITLE -->
  <a href="{{url}}" class="product-preview-title">{{title}}</a>
</div>
<!-- /PRODUCT PREVIEW -->
