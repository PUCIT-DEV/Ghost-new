{
  "extends": [
    "@tryghost:base",
    "@tryghost:groupTestLint",
    "@tryghost:groupCSS",
    "@tryghost:groupBuildTools",
    "@tryghost:automergeSilentTestLintNonMajor"
  ],
  "schedule": "before 3am on Tuesday",
  "travis": { "enabled": true },
  "node": {
    "supportPolicy": ["lts"]
   },
  "separateMinorPatch": true,
  "patch": {
    "automerge": true
  },
  "ignoreDeps": [
      "moment-timezone",
      "nodemailer",
      "validator",
      "simple-dom"
    ],
  "ignorePaths": ["core/test"]
}
