<div class="modal-content gh-whatsnew-modal">
    {{#let this.whatsNew.entries.firstObject as |entry|}}
        {{#if entry.feature_image}}
            <img class="gh-whatsnew-featured-feature-image mb5" src={{entry.feature_image}}>
        {{/if}}

        <div class="gh-whatsnew-featured-subhead">What's new?<span class="gh-whatsnew-featured-date">/ {{moment-format entry.published_at "DD MMMM YYYY"}}</span></div>
        <h2 class="gh-whasnew-featured-title">{{entry.title}}</h2>

        {{#if entry.custom_excerpt}}
            <p class="gh-whatsnew-featured-excerpt">{{entry.custom_excerpt}}</p>
        {{/if}}

        <div class="gh-whatsnew-featured-html">
            {{{entry.html}}}
        </div>

        <div class="gh-whatsnew-modal-footer">
            <a href="https://ghost.org/changelog/#/portal/signup" class="gh-btn gh-btn-primary" type="button" target="_blank" rel="noopener noreferrer"><span>Turn on notifications</span></a>
            <a class="gh-btn" href="https://ghost.org/changelog" target="_blank" rel="noopener noreferrer"><span>All updates &rarr;</span></a>
        </div>
    {{/let}}
</div>