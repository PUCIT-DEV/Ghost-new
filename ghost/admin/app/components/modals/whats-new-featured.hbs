<div class="modal-content">
    {{#let this.whatsNew.entries.firstObject as |entry|}}
        {{#if entry.feature_image}}
            <img class="gh-whatsnew-featured-feature-image mb5" src={{entry.feature_image}}>
        {{/if}}

        <section class="gh-whatsnew-featured-container">
            <div class="gh-whatsnew-featured-subhead">What's new?<span class="gh-whatsnew-featured-date">/ {{moment-format entry.published_at "DD MMMM YYYY"}}</span></div>
            <h2 class="gh-whasnew-featured-title">{{entry.title}}</h2>

            {{#if entry.custom_excerpt}}
                <div class="gh-whatsnew-featured-excerpt">{{entry.custom_excerpt}}</div>
            {{/if}}

            <div class="gh-whatsnew-featured-entry">
                {{{entry.html}}}
            </div>
        </section>
    {{/let}}

    <div class="gh-whatsnew-modal-footer">
        <a class="gh-btn" href="https://ghost.org/changelog/#/portal/signup" target="_blank" rel="noopener noreferrer"><span>Turn on notifications</span></a>
        <a class="gh-btn gh-btn-primary" href="https://ghost.org/changelog" target="_blank" rel="noopener noreferrer"><span>All updates &rarr;</span></a>
    </div>
</div>