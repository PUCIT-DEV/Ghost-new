<div class="gh-members-chart-box {{if this.isSmall "small"}}" {{did-insert (perform this.fetchStatsTask)}}>    
    {{#if (not this.stats)}}
        <GhLoadingSpinner />
    {{else}}
        <EmberChart
            @type="LineWithLine"
            @options={{this.chartOptions}}
            @data={{this.chartData}}
            @height={{300}} />
    {{/if}}
</div>